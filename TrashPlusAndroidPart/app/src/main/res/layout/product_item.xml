<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/product_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/image_of_product"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/name_of_product" />

    <TextView
        android:id="@+id/name_of_product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/name"
        android:layout_margin="7dp"
        app:layout_constraintStart_toEndOf="@+id/product_icon"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/short_product_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/short_product_info"
        android:layout_margin="7dp"
        app:layout_constraintTop_toBottomOf="@id/name_of_product"
        app:layout_constraintStart_toEndOf="@id/product_icon"
        />

</androidx.constraintlayout.widget.ConstraintLayout>