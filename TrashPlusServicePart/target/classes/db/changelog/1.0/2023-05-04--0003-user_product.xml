<?xml version="1.0" encoding="UTF-8" ?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <changeSet id="2023-05-04--0003-user_product" author="kpetrovskiy">
        <preConditions>
            <not>
                <tableExists tableName="link"/>
            </not>
        </preConditions>

        <createTable tableName="link">
            <column name="id"
                    type="BIGINT"
                    autoIncrement="true">
                <constraints nullable="false"
                             primaryKey="true"/>
            </column>

            <column name="user_id"
                    type="BIGINT">
                <constraints nullable="false"
                             primaryKey="true"
                             primaryKeyName="pk_user_product"
                             foreignKeyName="fk_user_product_user"
                             references="users(id)"/>
            </column>

            <column name="product_id"
                    type="BIGINT">
                <constraints
                    nullable="false"
                    primaryKey="true"
                    primaryKeyName="pk_product_user"
                    foreignKeyName="fk_product_user_product"
                    references="products(id)"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>